<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans.xsd" default-autowire="byType">


    <bean class="com.filRouge.dvdStore.controller.MovieController">
        <property name="movieService" ref="movieService" />
    </bean>
    <bean id="movieService" class="com.filRouge.dvdStore.service.DefaultMovieService">
        <property name="movieRepository" ref="movieRepository"/>
        <property name="goLiveMovieRepository" ref="goLiveMovieRepository"/>
    </bean>
    <bean id="movieRepository" class="com.filRouge.dvdStore.repository.MemoryMovieRepository"/>

    <bean id="goLiveMovieRepository" class="com.filRouge.dvdStore.repository.FileMovieRepository">
    <property name="file" value="C:\\temp\\movies.csv"/>

    </bean>




</beans>